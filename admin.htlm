<!-- Student Registration -->
<h3>Register New Student</h3>
<input type="text" id="studentName" placeholder="Full Name">
<input type="text" id="studentClass" placeholder="Class (e.g., Form 2)">
<input type="text" id="studentSubjects" placeholder="Subjects (comma-separated)">
<button onclick="registerStudent()">Register Student</button>
<div id="studentList"></div>
<select id="subjectSelect" multiple>
  ${allSubjects.map(sub => `<option value="${sub}">${sub}</option>`).join("")}
</select>
<h3>Registered Users</h3>
<ul id="userList"></ul>
